<div class="mt-4">
    <h3>Khóa học của tôi</h3>
    <table class="table">
    <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên khóa học</th>
                <th scope="col">Trình độ</th>
                <th scope="col" colspan="4">Thời gian tạo</th>
            </tr>
    </thead>
    <tbody>
        {{#each courses}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.level}}</td>
                <td>{{this.createdAt}}</td>
                <td><a href="/courses/{{this.}}" class="btn btn-link">Sửa</a></td>
                <td><a href="" class="btn btn-link">Xóa</a></td>

            </tr>
       {{/each}}
    </tbody>
    </table>
</div>