<div class="mt-4">
    <div class="row">
{{!-- loop array --}}
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card_courses-item" style="width: 18rem;">
                <a href="/courses/{{this.slug}}">
                     <img src="{{this.img}}" class="card-img-top" alt="{{this.name}}">
                </a>
            <div class="card-body">
                <a href="/courses/{{this.slug}}">
                <h5 class="card-title">{{this.name}}</h5>
                
                <p class="card-text">{{this.description}}</p>
                <a href="#" class="btn btn-primary">Đăng ký học</a>
            </div>
            </div>
        </div>

        {{/each}}
    </div>
</div>